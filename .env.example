# Headfull Chrome Configuration
# Copy this file to .env and modify as needed

# API Settings
HFC_API_HOST=0.0.0.0
HFC_API_PORT=8000
HFC_DEBUG=false

# Chrome Settings
HFC_CHROME_BINARY=/usr/bin/google-chrome
HFC_CHROME_USER_DATA_BASE=/tmp/chrome-profiles

# Display Settings (Xvfb)
HFC_DISPLAY_BASE=99
HFC_DISPLAY_WIDTH=1920
HFC_DISPLAY_HEIGHT=1080
HFC_DISPLAY_DEPTH=24

# DevTools Settings
HFC_DEVTOOLS_PORT_BASE=9222
HFC_MAX_CONCURRENT_SESSIONS=5

# Job Settings
HFC_DEFAULT_DELAY_BETWEEN_REQUESTS=0
HFC_JOB_TIMEOUT_SECONDS=60
HFC_CONTENT_FETCH_TIMEOUT_SECONDS=30

# Logging
HFC_LOG_LEVEL=INFO
HFC_ACCESS_LOG_PATH=/var/log/headfull-chrome/access.log
HFC_SESSION_LOG_PATH=/var/log/headfull-chrome/sessions
